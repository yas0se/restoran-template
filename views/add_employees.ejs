<%- include('layout/header')%>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                  <div class="card-header bg-primary">
                      <h3 class="text-light">Add New Employee</h3>
                  </div>
                  <div class="card-body p-4">
                        <form action="/add_employees" method="post" id="add_employees-form" enctype="multipart/form-data">
                             <div class="mb-3">
                               <label for="name">Name</label>
                               <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter name" required/>
                             </div>
                             <div class="mb-3">
                               <label for="email">Restaurant</label>
                               <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter Restaurant" required/>
                             </div>                        
                             <div class="mb-3">
                               <label for="image" class="form-label">Select Image</label>
                               <input type="file" name="image" class="form-control form-control-lg" required/>
                             </div>
                             <div class="mb-3 d-grid">
                               <input type="submit" name="submit" value="Add Employee" class="btn btn-primary btn-lg"/>
                             </div>
                        </form>
                  </div>
            </div>
       </div>
    </div>
</div>

<%- include('layout/footer')%>
